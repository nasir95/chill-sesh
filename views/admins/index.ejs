<!DOCTYPE html>
<html>
<head>
  <title>Chill Sesh</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Baloo&display=swap" rel="stylesheet">
  <!-- Materialize Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Materialize CSS Framework -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/css/style.css" />
  <!-- JavaScript for Materialize -->
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper purple">
        <a href="" class="brand-logo left">Chill Sesh</a>
        <ul class="right">
          <li><a href="/users">Home</a></li>
          <!-- Place Login UI Here -->
            <!-- new html below -->
            <li>
            <% if (user) { %>
                <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
            <% } else { %>
                <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
            <% } %>
            </li>
        </ul>
      </div>
    </nav>
  </div>
  <header class="container">
  </header>
  <main class="container">
    <% users.forEach(function (event) { %>
    <% if (event._id.equals(user && user._id)) { %>
    <div class="container">
      <h1><%= event.name %></h1>
      <form method="POST" action="/events">
        <div class = "form-group">
          <label>Name Of Event</label>
          <input name ="name" class="form-control" placeholder="Event"/>
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea name="description" class="form-control"></textarea>
        </div>
        <input type="submit" class="btn btn-info" value="Post"/>
      </form>
      <% } %>
    </div>
    <% }) %>
  </main>
</body>
</html>